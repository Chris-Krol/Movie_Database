html
    head 
        title Movie Database - #{user.userid}
        link(rel='stylesheet' href='/stylesheet.css')
body 
    include ../partials/header

    div#main 
        br
        br
        div#account_permission
            if user.contributor === true
                b.sectionHeader Username: #{user.userid} (Contributor)
            if user.contributor === false 
                b.sectionHeader Username: #{user.userid}(Regular User)
        br
        button(type="button" id="follow") follow
        br
        br
        b.sectionHeader Users #{user.userid} Follows: 
        br
    div#profilePageButton
        each u in user.ufollow 
            button(type="button" id=u.pID) follow
            | 
            a.textLink(href="/users/" + u.uID) #{u.Name}
            br
        br
        b.sectionHeader People #{user.userid} Follows: 
        br
    div#profilePageButton
        each p in user.pfollow 
            button(type="button" id=p.pID) follow
            | 
            a.textLink(href="/person/" + p.pID) #{p.Name}
            br

        br
    div#main
        b.sectionHeader Movies #{user.userid} Has Watched:
        br
    div#profilePageButton
        each m in user.watched 
            a.textLink(href="/movies/" + m.mID) #{m.Title}
            br
        br

    div#main 
        b.sectionHeader Reviews Written By #{user.userid}: 
        br
    div#profilePageButton
        each r in user.reviews 
            a.textLink(href="/movies/" + r.title) #{r.title}
            br
    