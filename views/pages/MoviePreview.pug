head
    link(rel='stylesheet' href='/stylesheet.css')
    title Movie:#{currMovie.Title} 
    meta(name='viewport' content='width=device-width, initial-scale=1')
    include ../partials/header
    div#poster
        img(src=currMovie.Poster)
#descriptor
    h1.Titles #{currMovie.Title}
    p.PlotAndCast#Plot #{currMovie.Plot}
    p#RunAndRelease Release Year: #{currMovie.Year} &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Runtime:#{currMovie.Runtime}
    .divider
    h1.Titles Director(s) 
    each drt in director 
        a.PlotAndCast#cast(href="/people/" + drt) #{drt}
        br
    h1.Titles Actors
    each act in actors
        a.PlotAndCast#cast(href="/people/" + act) #{act}
        br
    h1.Titles Writer(s) 
    each wrt in writer 
        a.PlotAndCast#cast(href="/people/" + wrt) #{wrt}
        br


#revdiv
    each review in reviewsOfCurrentMovie
        div.containertop.hiddendropdown(id=review.identifier)
            h1.containertoptext.green Review by #{review.UserName}   Rating: #{review.Rating}/10 
            h2.dropdowntext #{review.TheReview}
#userInput
    label.label(for='userNameID') Your Name: 
    input#userNameID.textboxClass(type='text')
    br
    label.label(for='ratingID') Your rating out of 10: 
    select#ratingID(name='rating')
        option(value='1') 1
        option(value='2') 2
        option(value='3') 3
        option(value='4') 4
        option(value='5') 5
        option(value='6') 6
        option(value='7') 7
        option(value='8') 8
        option(value='9') 9
        option(value='10') 10
    br
    label.label(for='NotesID') Your review: 
    br
    textarea#NotesID.textboxClass(type='text')
    br
    button#addReview  Click to add your own review
    script(src='/MoviePreviewJS.js') 

